#include <stdio.h>
#include <stdlib.h>
#include <math.h>

int main()
{
    int noI = 0;
    int nivel = 0;
    char Arvore[7][70];
    char no[10];
    int i = 0;
    int NDeNos;
    int posicao;
    int totalColuna = 70;
    int aux = 0;

    no[0] = '1';
    no[1] = '3';
    no[2] = '5';
    no[3] = '6';
    no[4] = '7';
    no[5] = '9';
    no[6] = '1';
    no[7] = '6';
    no[8] = '0';
    no[9] = '8';

    for(i = 0; i < 7; i++)
	{
        for(int j = 0; j < 70; j++)
		{
            Arvore[i][j] = '*';
        }
    }

    for(i = 0; i < 7; i++)
	{
		int cont = 0;
		NDeNos = subir(2, i) + 1;
        posicao = trunc(totalColuna/NDeNos);
        for(int j = 0; j < 70; j++)
		{
			if(aux + 1 == NDeNos)
			{
				continue;
			}
            if(cont == posicao) 
			{
                Arvore[i][j] = no[noI];
                noI++;
                cont = 0;
                aux++;
            }
            cont++;
        }
        aux = 0;
    }
    
    for(i = 0; i < 7; i++)
	{
        for(int j = 0; j < 70; j++)
		{
            printf("%c", Arvore[i][j]);
        }
        printf("\n");
    }
}
