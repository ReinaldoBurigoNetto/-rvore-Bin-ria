#include "stdio.h"
#include "stdlib.h"
#include "math.h"
#include "function.c"

int main()
{
    struct No *Raiz = (struct No*) NULL;

    int vetor[] = {12,45,78,96,85,20,01,52,63,96,85,23,35,36,45,16};

    int Opt;
    int TVetor = sizeof(vetor)/sizeof(vetor[0]);
    do
    {
        system("cls");
        printf("1 - Inserir\n");
        printf("2 - Em-Ordem\n");
        printf("3 - Buscar Recursao\n");
        printf("4 - Inserir Array\n");
        printf("5 - Busca sequencia no Array\n");
        printf("6 - Mostrar Arvore Binaria\n");
        printf("0 - Sair\n");
        printf("Escolha: ");
        scanf("%d", &Opt);

        if (Opt == 1)
        {
            int Id;
            printf("Info Id: ");
            scanf("%d", &Id);
            Raiz = AddRecursao(Raiz, Id);
        }

        else if (Opt == 2)
        {
            Ordenar(Raiz);
            printf("\n");;
            system("pause");
        }

        else if (Opt == 3)
        {
            int Id;
            printf("Informe o Id: ");
            scanf("%d", &Id);
            struct No *EncontrarNO = Recursao(Raiz, Id);

            if (EncontrarNO == (struct No*) NULL)
                printf("Nao Encontrado");
            else
                printf("Encontrar No Endereco %x", EncontrarNO);

            printf("\n");
            system("pause");
        }

        else if (Opt == 4)
        {
            for(int i = 0; i < TamanhoArray; i++)
            {
                int meio;
                if(i == 0)
                {
                    meio = trunc(((TamanhArry-1)) / 2);
                    Raiz = AddRecursao(Raiz, Array[meio]);
                }
                else if (i != meio)
                {
                    Raiz = AddRecursao(Raiz, Array[i]);
                }
            }
            printf("Arvore Pronta\n");
            system("pause");
        }

        else if (Opt == 5)
        {
            system("cls");
            int i;
            int busca;
            int elemento;

            printf("Array: ");

            for (i = 0; i < TamanhoArray; i++)
            {
                printf("%d ", Array[i]);
            }

            i = 0;

            printf("\nDigite o elemento a ser buscado: ");
            scanf("%d", &busca);

            printf("\nElementos verificados: ");

            while (elemento != busca)
            {
                elemento = Array[i];
                printf("%d ", elemento);
                i++;
            }

            printf("\nNumero de iteracoes: %d\n", i);

            system("pause");
        }

        else if (Opt == 6)
        {
            MostraArvore(Raiz);
            system("pause");
        }

    } while (Opt != 0);

    return 0;
}
